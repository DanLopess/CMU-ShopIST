<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/store_product_details_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/product_image"
                android:src="@drawable/ic_baseline_fastfood_24" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/store_product_details_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="10pt"
                    >
                </TextView>

                <TextView
                    android:id="@+id/store_product_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/store_product_details_name_title"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    tools:text="Sample name" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/store_product_details_desc_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="10pt"
                    >
                </TextView>

                <TextView
                    android:id="@+id/store_product_details_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/store_product_details_desc_title"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    tools:text="Sample description" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/store_product_details_price_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textSize="10pt"
                    >
                </TextView>

                <EditText
                    android:id="@+id/store_product_details_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/store_product_details_price_title"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    tools:text="Sample price" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_gravity="top">

                    <TextView
                        android:id="@+id/store_product_details_needed_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/needed"
                        android:textSize="8pt"
                        android:gravity="center"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/store_product_details_needed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/store_product_details_needed_title"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="7pt"
                        tools:text="10" />
                </RelativeLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/store_product_details_cart_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/in_cart"
                        android:textSize="8pt"
                        android:gravity="center"
                        >
                    </TextView>

                    <NumberPicker
                        android:id="@+id/store_product_details_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="7pt"
                        android:textColor="@color/black"
                        android:layout_below="@id/store_product_details_cart_title"
                        android:gravity="center"
                        >
                    </NumberPicker>
                </RelativeLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>